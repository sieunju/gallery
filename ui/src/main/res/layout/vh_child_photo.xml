<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivThumb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <View
        android:id="@+id/vSelected"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#33222222"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ivThumb"
        app:layout_constraintTop_toTopOf="@+id/ivThumb"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSelectedNum"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <View
            android:id="@+id/vBgNotSelected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#83FFFFFF"
            android:visibility="visible" />

        <View
            android:id="@+id/vBgSelected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0091EA"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSelectNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:padding="1dp"
            android:textColor="#FFF"
            app:autoSizeMaxTextSize="22dp"
            app:autoSizeMinTextSize="10dp"
            app:autoSizeTextType="uniform"
            tools:text="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>